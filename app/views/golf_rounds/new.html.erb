<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-extrabold text-gray-900 mb-2">
        Upload Your Golf Scores
      </h1>
      <p class="text-lg text-gray-600">
        Enter your last 3 rounds to calculate your handicap
      </p>
    </div>

    <%= form_with url: golf_rounds_path, method: :post, class: "space-y-8" do |f| %>
      <!-- Round 1 -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
          <span class="bg-blue-600 text-white rounded-full w-8 h-8 flex items-center justify-center mr-3">1</span>
          Round 1
        </h3>

        <div class="grid md:grid-cols-2 gap-4">
          <div class="md:col-span-2">
            <%= label_tag "rounds[0][course_name]", "Course Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= text_field_tag "rounds[0][course_name]", nil,
                               class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                               placeholder: "e.g., Pebble Beach Golf Links",
                               required: true %>
          </div>

          <div>
            <%= label_tag "rounds[0][score]", "Your Score", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= number_field_tag "rounds[0][score]", nil,
                                 min: 50, max: 200,
                                 class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                                 placeholder: "e.g., 92",
                                 required: true %>
          </div>

          <div>
            <%= label_tag "rounds[0][played_at]", "Date Played", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= date_field_tag "rounds[0][played_at]", nil,
                               class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                               required: true %>
          </div>

          <div>
            <%= label_tag "rounds[0][course_rating]", "Course Rating", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= number_field_tag "rounds[0][course_rating]", nil,
                                 step: 0.1, min: 60, max: 80,
                                 class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                                 placeholder: "e.g., 72.5",
                                 required: true %>
            <p class="text-xs text-gray-500 mt-1">Found on scorecard</p>
          </div>

          <div>
            <%= label_tag "rounds[0][slope_rating]", "Slope Rating", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= number_field_tag "rounds[0][slope_rating]", nil,
                                 min: 55, max: 155,
                                 class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                                 placeholder: "e.g., 130",
                                 required: true %>
            <p class="text-xs text-gray-500 mt-1">Found on scorecard</p>
          </div>
        </div>
      </div>

      <!-- Round 2 -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
          <span class="bg-blue-600 text-white rounded-full w-8 h-8 flex items-center justify-center mr-3">2</span>
          Round 2
        </h3>

        <div class="grid md:grid-cols-2 gap-4">
          <div class="md:col-span-2">
            <%= label_tag "rounds[1][course_name]", "Course Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= text_field_tag "rounds[1][course_name]", nil,
                               class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                               placeholder: "e.g., Pebble Beach Golf Links",
                               required: true %>
          </div>

          <div>
            <%= label_tag "rounds[1][score]", "Your Score", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= number_field_tag "rounds[1][score]", nil,
                                 min: 50, max: 200,
                                 class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                                 placeholder: "e.g., 88",
                                 required: true %>
          </div>

          <div>
            <%= label_tag "rounds[1][played_at]", "Date Played", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= date_field_tag "rounds[1][played_at]", nil,
                               class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                               required: true %>
          </div>

          <div>
            <%= label_tag "rounds[1][course_rating]", "Course Rating", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= number_field_tag "rounds[1][course_rating]", nil,
                                 step: 0.1, min: 60, max: 80,
                                 class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                                 placeholder: "e.g., 71.8",
                                 required: true %>
            <p class="text-xs text-gray-500 mt-1">Found on scorecard</p>
          </div>

          <div>
            <%= label_tag "rounds[1][slope_rating]", "Slope Rating", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= number_field_tag "rounds[1][slope_rating]", nil,
                                 min: 55, max: 155,
                                 class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                                 placeholder: "e.g., 125",
                                 required: true %>
            <p class="text-xs text-gray-500 mt-1">Found on scorecard</p>
          </div>
        </div>
      </div>

      <!-- Round 3 -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
          <span class="bg-blue-600 text-white rounded-full w-8 h-8 flex items-center justify-center mr-3">3</span>
          Round 3
        </h3>

        <div class="grid md:grid-cols-2 gap-4">
          <div class="md:col-span-2">
            <%= label_tag "rounds[2][course_name]", "Course Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= text_field_tag "rounds[2][course_name]", nil,
                               class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                               placeholder: "e.g., Pebble Beach Golf Links",
                               required: true %>
          </div>

          <div>
            <%= label_tag "rounds[2][score]", "Your Score", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= number_field_tag "rounds[2][score]", nil,
                                 min: 50, max: 200,
                                 class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                                 placeholder: "e.g., 95",
                                 required: true %>
          </div>

          <div>
            <%= label_tag "rounds[2][played_at]", "Date Played", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= date_field_tag "rounds[2][played_at]", nil,
                               class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                               required: true %>
          </div>

          <div>
            <%= label_tag "rounds[2][course_rating]", "Course Rating", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= number_field_tag "rounds[2][course_rating]", nil,
                                 step: 0.1, min: 60, max: 80,
                                 class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                                 placeholder: "e.g., 73.2",
                                 required: true %>
            <p class="text-xs text-gray-500 mt-1">Found on scorecard</p>
          </div>

          <div>
            <%= label_tag "rounds[2][slope_rating]", "Slope Rating", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= number_field_tag "rounds[2][slope_rating]", nil,
                                 min: 55, max: 155,
                                 class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                                 placeholder: "e.g., 135",
                                 required: true %>
            <p class="text-xs text-gray-500 mt-1">Found on scorecard</p>
          </div>
        </div>
      </div>

      <!-- Info Box -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <h3 class="font-semibold text-blue-900 mb-2">What happens next?</h3>
        <p class="text-sm text-blue-800">
          We'll use the World Handicap System (WHS) to calculate your estimated handicap from these three rounds.
          Then you can set your target handicap and generate a personalized training plan.
        </p>
      </div>

      <!-- Submit Button -->
      <div class="flex gap-4">
        <%= link_to "Back", root_path, class: "flex-1 py-3 px-4 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 font-medium text-center" %>
        <%= submit_tag "Calculate My Handicap", class: "flex-1 bg-blue-600 text-white py-3 px-4 rounded-lg hover:bg-blue-700 font-semibold cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
