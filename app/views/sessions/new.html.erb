<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Sign in to your account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Continue your golf improvement journey
      </p>
    </div>

    <%= form_with url: login_path, class: "mt-8 space-y-6" do |f| %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= label_tag :email, nil, class: "sr-only" %>
          <%= email_field_tag :email, nil,
                              class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm",
                              placeholder: "Email address",
                              required: true,
                              autofocus: true %>
        </div>
        <div>
          <%= label_tag :password, nil, class: "sr-only" %>
          <%= password_field_tag :password, nil,
                                 class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm",
                                 placeholder: "Password",
                                 required: true %>
        </div>
      </div>

      <div>
        <%= submit_tag "Sign in", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 cursor-pointer" %>
      </div>

      <div class="text-center text-sm">
        <span class="text-gray-600">Don't have an account?</span>
        <%= link_to "Sign up", signup_path, class: "font-medium text-green-600 hover:text-green-500" %>
      </div>

      <% if @resend_confirmation_link %>
        <div class="text-center text-sm mt-4">
          <%= link_to "Resend confirmation email", @resend_confirmation_link, class: "font-medium text-blue-600 hover:text-blue-500" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
